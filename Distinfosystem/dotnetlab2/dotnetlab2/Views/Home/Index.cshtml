@model dotnetlab2.Models.HomeViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome to the community!</h1>
</div>
<div class="row">
    <div class="col-md-4">
        <dt>Hello @Html.DisplayFor(model => model.Username)</dt>
        <p><br />
            Last login: @Html.DisplayFor(LastLogin => Model.LastLogin)
        <br />
            Total logins this month: @Html.DisplayFor(LoginsThisMonth => Model.LoginsThisMonth)
        <br />
            Total unread messages: @Html.DisplayFor(NumberUnreadMessages => Model.NumberUnreadMessages)
        <br />
        @if (Model.NumberUnreadMessages > 0)
        {
            <a href="/home/Readpage">Read unread messages</a>
        }
        </p>
        <h3>@ViewData["Message"]</h3>
    </div>
</div>