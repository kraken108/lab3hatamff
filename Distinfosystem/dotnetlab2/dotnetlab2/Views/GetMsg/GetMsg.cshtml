@model dotnetlab2.Models.HomeViewModels.GetMsgViewModel
@{
    ViewData["Title"] = "GetMsg";
}
<h3>Message viewer</h3>
<div class="row">
    <div class="col-md-4">
        <p>
            <h4>@Html.DisplayFor(model => model.Topic) - @Html.DisplayFor(model => model.DateTime)</h4>
            @Html.DisplayFor(model => model.Msg)
            <br />
        </p>
        <br />
        <form method="post">

            <input asp-for="SenderId" type="hidden" value=@Model.SenderId />

            <button type="submit">Remove message</button>
        </form>
        <br />
        <br />
        <h4>Other messages:</h4>
        @{
            foreach (var m in Model.UserMessagesViewModel.Messages)
            {
                <p>
                    <a asp-controller="GetMsg" asp-action="GetMsg" asp-route-messageID="@m.MessageId">@m.DateTime - @m.Topic @m.isRead ID: @m.MessageId</a>
                </p>
            }
        }
    </div>
    <br />
</div>

